<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;">
      </div>
      <div class="col-md-8">
        <h1>{{user.name}}</h1>
        <p>{{user.email}}</p>
        <a href="/users/{{user.id}}/edit">
          <button type="button" class="btn btn-primary">Edit</button>
        </a>
      </div>
    </div>
  </div>

</div>

<br>
<br>

<div class="row">
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        我追縱的人
      </div>
      <div class="card-body">
        {{#each user.Followings}}
        <a href="/users/{{this.id}}">
          <img width="50" src="{{this.image}}" class="ml-2">
        </a>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        已評論餐廳
      </div>
      <div class="card-body">
        {{#each user.Comments}}
        <a href="/restaurants/{{this.Restaurant.id}}">
          <img width="50" src="{{this.Restaurant.image}}" class="ml-2">
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<br>

